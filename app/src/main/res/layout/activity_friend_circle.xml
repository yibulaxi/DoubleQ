<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.doubleq.xm6leefunz.main_code.ui.about_discovery.FriendCircleActivity">

    <include layout="@layout/activity_include_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150"
                android:background="@color/app_theme"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/discover_iv_head"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp20"/>
                <TextView
                    android:id="@+id/discover_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="我是大美人啦"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:layout_margin="@dimen/dp10"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/discover_lin_new_msg"
                android:layout_width="@dimen/dp140"
                android:layout_height="@dimen/dp30"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/login_btn_bac"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp18"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp5"
                    android:text="2条新消息"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/friendcircle_recyc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadingEdge="none"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>