<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/set_xiugai_bac"
    tools:context=".main_code.ui.about_personal.about_set.about_count_and_safe.ChangeBindOldActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include_top_lin_back"
        android:orientation="vertical"
        >
        <View
            android:id="@+id/include_top_margin10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp25"
            android:background="@color/ac_top"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/include_top_iv_back"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp10"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/to_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/include_top_tv_tital"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="标题"
                    android:maxEms="6"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/include_top_tv_title_group"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="标题"
                        android:singleLine="true"
                        android:maxEms="6"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp18" />
                    <ImageView
                        android:layout_width="@dimen/dp18"
                        android:layout_height="@dimen/dp18"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp5"
                        android:src="@drawable/group_title_click"
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/include_top_iv_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp10"
                android:visibility="gone"
                app:srcCompat="@drawable/friend_data_top_andsoon" />
            <TextView
                android:id="@+id/inclu_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp10"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:text="保存"
                />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp45"
        android:layout_marginLeft="@dimen/dp45"
        android:layout_marginTop="@dimen/dp80"
        >
        <!--更换绑定-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/changebind_ed_old_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:minEms="20"
                    android:maxLength="20"
                    android:textCursorDrawable="@null"
                    android:inputType="text"
                    android:hint="原号码"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp30"
                    android:textColorHint="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp30"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/changebind_ed_old_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_weight="1"
                        android:minEms="8"
                        android:maxLength="8"
                        android:textCursorDrawable="@null"
                        android:inputType="text"
                        android:hint="验证码"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
                    <TextView
                        android:id="@+id/changebind_tv_old_getcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:paddingRight="@dimen/dp15"
                        android:paddingLeft="@dimen/dp15"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_solid_stroke"
                        android:text="获取"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <!--确定按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp30"
            android:orientation="vertical">
            <Button
                android:id="@+id/changebind_btn_old_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_gravity="center"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"
                android:background="@drawable/set_sure"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>