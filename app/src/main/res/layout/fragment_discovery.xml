<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greyf3"
    tools:context="com.doubleq.xm6leefunz.main_code.about_fragment.about_discovery.DiscoveryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/doubleq_theme"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:textSize="@dimen/sp15"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:text="扫一扫"
            />
        <TextView
            android:id="@+id/include_frag_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp20"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/white"
            android:text="发现" />
        <TextView
            android:id="@+id/include_frag_img_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:textSize="@dimen/sp15"
            android:textColor="@color/white"
            android:text="扫一扫"/>
    </LinearLayout>

    <!--<include layout="@layout/fragment_include_title_bar"/>-->

    <LinearLayout
        android:id="@+id/lin_discovery_friendcircle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginTop="@dimen/dp20"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp18"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:text="朋友圈"
            />
        <ImageView
            android:id="@+id/frag_img_discovery_tocircle"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/to_right"
            />
    </LinearLayout>
</LinearLayout>