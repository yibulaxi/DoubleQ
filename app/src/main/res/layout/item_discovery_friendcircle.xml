<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/discover_iv_head"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp1"
            android:src="@drawable/first_head_nor"/>
        <TextView
            android:id="@+id/discover_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme"
            android:layout_marginLeft="@dimen/dp5"
            android:textSize="@dimen/sp16"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="ui-吴"/>
        <TextView
            android:id="@+id/discover_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey999"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp5"
            android:textSize="@dimen/sp14"
            android:text="2天前"/>
    </LinearLayout>


        <TextView
            android:id="@+id/discover_tv_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:textColor="@color/grey333"
            android:text="只要坚定脚步，成功就在眼前，就在旭日在天空升起的那刻。"
            android:singleLine="false"
            android:layout_marginRight="@dimen/dp60"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp50"/>
        <TextView
            android:id="@+id/discover_tv_show_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:textColor="@color/app_theme"
            android:text="全文"
            android:singleLine="false"
            android:layout_marginRight="@dimen/dp60"
            android:layout_marginLeft="@dimen/dp50"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp60"
        android:descendantFocusability="blocksDescendants">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/discover_recyc_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            />
    </RelativeLayout>

    <!--<ImageView-->
        <!--android:id="@+id/discover_iv_img"-->
        <!--android:layout_width="@dimen/dp80"-->
        <!--android:layout_height="@dimen/dp80"-->
        <!--android:layout_marginLeft="@dimen/dp60"-->
        <!--android:adjustViewBounds="true"-->
        <!--android:layout_marginTop="@dimen/dp10"-->
        <!--android:scaleType="fitXY"-->
        <!--/>-->

    <TextView
        android:id="@+id/discover_tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp12"
        android:textColor="@color/grey999"
        android:singleLine="false"
        android:text="定位"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginLeft="@dimen/dp50"/>
    <TextView
        android:id="@+id/discover_tv_mention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp12"
        android:textColor="@color/grey999"
        android:singleLine="false"
        android:text="提到了我"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginLeft="@dimen/dp50"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp20"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey999"
                android:textSize="@dimen/sp16"
                android:text="赞"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp20"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey999"
                android:textSize="@dimen/sp16"
                android:text="评论"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ac_et_discovery_friendcircle_comments"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp20"
            android:hint="请输入你的评论"
            android:visibility="gone"
            android:singleLine="false"/>

        <Button
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp40"
            android:textColor="@color/white"
            android:layout_margin="@dimen/dp10"
            android:background="@color/black_trans"
            android:visibility="gone"
            android:text="发送"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/discover_lin_zan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp20"
        android:background="@color/greyf3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/discover_tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/discover_lin_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/greyf3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/discover_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"/>

    </LinearLayout>
</LinearLayout>