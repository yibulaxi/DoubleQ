<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ac_img_discovery_frinedcircle_head"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp1"/>
        <TextView
            android:id="@+id/ac_tv_discovery_frinedcircle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:textSize="@dimen/sp18"
            android:text="网名"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ac_tv_discovery_frinedcircle_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp16"
        android:text="只要坚定脚步，成功就在眼前，就在旭日在天空升起的那刻。"
        android:singleLine="false"
        android:layout_marginRight="@dimen/dp80"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"/>

    <ImageView
        android:id="@+id/ac_img_discovery_frinedcircle_pic"
        android:layout_width="@dimen/dp250"
        android:layout_height="@dimen/dp150"
        android:layout_marginLeft="@dimen/dp20"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/dp20"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ac_tv_discovery_friendcircle_name_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:text="喵喵喵："
            android:visibility="gone"
            android:textSize="@dimen/sp15"
            />
        <TextView
            android:id="@+id/ac_tv_discovery_friendcircle_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:singleLine="false"
            android:textSize="@dimen/sp15"
            android:padding="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/sp20"
            android:text="一起加油！"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/ac_img_discovery_friendcircle_comments"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:src="@drawable/img_discovery_friendcircle_selector"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp10"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ac_et_discovery_friendcircle_comments"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp20"
            android:hint="请输入你的评论"
            android:visibility="gone"
            android:singleLine="false"/>

        <Button
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp40"
            android:textColor="@color/white"
            android:layout_margin="@dimen/dp10"
            android:background="@color/black_trans"
            android:visibility="gone"
            android:text="发送"/>
    </LinearLayout>
</LinearLayout>