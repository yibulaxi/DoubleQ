<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/include_top_lin_back"
    android:background="@color/trans"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/include_top_margin10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/include_top2_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/include_top_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp24"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp10"
                android:visibility="invisible"
                android:paddingRight="@dimen/dp10"
                android:clickable="true"
                app:srcCompat="@drawable/to_left" />

            <TextView
                android:id="@+id/include_top_tv_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />
            <TextView
                android:id="@+id/include_top_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="跳过"
                android:visibility="invisible"
                android:padding="@dimen/dp10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="@dimen/dp24"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:paddingLeft="@dimen/dp10"-->
                <!--android:paddingRight="@dimen/dp10"-->
                <!--android:visibility="invisible"-->
                <!--app:srcCompat="@drawable/to_left" />-->

        </LinearLayout>

    </LinearLayout>
</LinearLayout>