<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/doubleq_theme"
   >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:text="短信登录"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ac_et_use_msg_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:hint="手机号"
            android:textSize="@dimen/sp18"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:maxLength="11"
            android:textCursorDrawable="@null"
            android:background="@null"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/ac_et_use_msg_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:textSize="@dimen/sp18"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/ac_tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape_login_nor"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:padding="@dimen/dp5"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"/>
        <TextView
            android:id="@+id/ac_tv_use_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:text="用密码登录"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp30"/>

        <Button
            android:id="@+id/ac_btn_login_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginTop="@dimen/dp40"
            android:textSize="@dimen/sp20"
            android:textColor="@color/white"
            android:background="@drawable/btn_shape_login_nor"/>
    </LinearLayout>

</RelativeLayout>
