<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trans">

    <LinearLayout
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_shape_login"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:background="@color/trans"
            android:textColor="@color/gray666"
            android:textSize="@dimen/sp16"
            android:text="修改" />

        <EditText
            android:id="@+id/pop_ed_contant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="请输入内容"
            android:background="@null"
            android:inputType="text"
            android:textColor="@color/gray333"
            android:padding="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:textSize="@dimen/sp16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@color/trans"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pop_btn_cancle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/trans"
                android:text="取消"
                android:textColor="@color/app_theme"
                android:textSize="16sp" />
            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:background="@color/grayeee" />

            <Button
                android:id="@+id/pop_btn_sure"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:background="@color/trans"
                android:layout_weight="1"
                android:text="确定"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>